{% block body %}
	<div class="container">
		<div class="List">
			<h2>{{ soluna.name }}</h2>
			{% for Work in soluna.Works %}
			<ul>
				<li><img src="data:image/png;base64,{{ Work.picture }}" /></li>
				<li><p>{{ Work.name }}</p></li>
