{% extends "default.html.twig" %}

{% block title %}Résumé
{% endblock %}
{% block stylesheets %}
	<link href="/../public/css/summary.css" rel="stylesheet">
{% endblock %}
{% block body %}
	<div class="container">
			<div class="work">
				<p id="name">{{ Work.Name }}</p>
				<p id="summary">Résumé : {{ Work.Summary }}</p>
				<p id="episodes">Nombre d'épisodes : {{ Work.NbEpisodes }}</p>
				<p id="status">Status : {{ Work.Status }}</p>
				<p id="season">Nombre de Saisons : {{ Work.NbSeason }}</p>
				<p id="category">{{ Work.Category }}</p>
				<div class="tags">
				{% for tag in Work.Tags %}
						<p class="tag">{{ tag.name }}</p>
				{% endfor %}
				</div>
			<button class="modify">Modifier</button>
			</div>
		<div>
			<form action="/mWork" method="post">
			<input type="text" id="name" name="name" value="{{ Work.Name }}"></input>
			<label id="summary">Résumé : </label>
			<input type="text" id="summary" name="summary" value="{{ Work.Summary }}"></input>
			<label id="episodes">Nombre d'épisodes : </label>
			<input type="text" id="episodes" name="episodes" value="{{ Work.NbEpisodes }}"></input>
			<label id="status">Status : </label>
			<input type="text" id="status" name="status" value="{{ Work.Status }}"></input>
			<label id="season">Nombre de Saisons : </label>
			<input type="text" id="season" name="season" value="{{ Work.NbSeason }}"></input>
			<label id="category">Category : </label>
				
			<select list="category" id="category" name="category">

			</select>
			<div class="tags">
				{% for tag in Work.Tags %}
						<select class="tag">
						<option value="tag.id">{{ tag.name }}</option>
						</select>
						<p class="delete">supprimer</p>
				{% endfor %}
				</div>
			<button type="submit">Valider</button>
			</form>
			<button class="cancel" style="visibility: hidden;">Annuler</button>
		</div>
	</div>
	<div style="visibility: hidden;">
		{% for category in Categories %}
			<p class="categoriesI">{{ category.ID }}</p>
			<p class="categoriesN">{{ category.Name }}</p>
		{% endfor %}
		{% for tag in Tags %}
			<p class="tagI">{{ tag.ID }}</p>
			<p class="tagN">{{ tag.Name }}</p>
		{% endfor %}
	</div>
<script src="/js/summary.js"></script>
{% endblock %}