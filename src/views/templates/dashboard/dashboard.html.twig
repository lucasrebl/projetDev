{% extends "default.html.twig" %}

{% block title %}panel admin
{% endblock %}
{% block stylesheets %}
	<link href="/../public/css/dashboard.css" rel="stylesheet">
{% endblock %}
{% block body %}page du panel admin
	<h3>crudUser</h3>
	<div class="crudUser">
		<h3>form delete user</h3>
		<form action="/panelAdmin" method="post">
			<label for="delete">username:</label>
        	<input type="text" name="username" required>

        	<input type="submit" name="delete" value="delete user">
		</form>

		<h3>form update and add user</h3>
		<form action="/panelAdmin" method="post" enctype="multipart/form-data">
			<label for="update">selectionné le nom d'utilisateur:</label>
        	<input type="text" name="usernameSelect">

			<label for="update">username:</label>
			<input type="text" name="username">

			<label for="update">email:</label>
			<input type="text" name="email">

			<label for="update">password:</label>
			<input type="password" name="password">

			<label for="update">isAdmin:</label>
			<input type="number" name="isAdmin" min="0" max="1">

			<label for="update">age:</label>
			<input type="number" name="age" min="10" max="100">

			<label for="pictures">pictures:</label>
			<input type="file" name="pictures">

			<input type="submit" name="update" value="update info user">
			<input type="submit" name="submit" value="add user">
		</form>

		<h3>form update image user</h3>
		<form action="/panelAdmin" method="post" enctype="multipart/form-data">
			<label for="update">selectionné le nom d'utilisateur:</label>
			<input type="text" name="usernameSelect" required>

			<label for="pictures">pictures:</label>
			<input type="file" name="pictures" required>

			<input type="submit" name="update2" value="update pictures">
		</form>
	</div>

	<div class="crudUser2">
		<div class="readUSer">
			{% for user in userDetails %}
				<div class="read">
					<p id="read">id: {{user.idUser}}</p>
					<p id="read">username: {{user.username}}</p>
					<p id="read">email: {{user.email}}</p>
					<p id="read">password: {{user.passwordUser}}</p>
					<p id="read">age: {{user.age}}</p>
					<p id="read">isAdmin: {{user.isAdmin}}</p>
					<img id="image" src="data:image;base64,{{user.pictures}}" alt="Image">
				</div>
			{% endfor %}
		</div>
	</div>

	<h3>crud Oeuvres</h3>
	<div class="crudOeuvres">
		<h3>form delete oeuvres</h3>
		<form action="/panelAdmin" method="post">
			<label for="delete">id:</label>
        	<input type="number" name="id" min="1" required>

        	<input type="submit" name="delete2" value="delete Oeuvres">
		</form>

		<h3>form update and add oeuvres</h3>
		<form action="/panelAdmin" method="post" enctype="multipart/form-data">
			<label for="update">selectionné l'id de l'oeuvres:</label>
        	<input type="text" name="idSelect">

			<label for="update">nameWorks:</label>
			<input type="text" name="nameWorks">

			<label for="update">status:</label>
			<input type="text" name="status">

			<label for="update">summary:</label>
			<input type="text" name="summary">

			<label for="update">numberOfEpisodes:</label>
			<input type="number" name="numberOfEpisodes">

			<label for="update">numberOfSeason:</label>
			<input type="number" name="numberOfSeason">

			<label for="update">numberOfTome:</label>
			<input type="number" name="numberOfTome">

			<label for="image">image:</label>
			<input type="file" name="image">

			<input type="submit" name="update3" value="update info oeuvres">
			<input type="submit" name="submit2" value="add oeuvres">
		</form>

		<h3>form update image oeuvres</h3>
		<form action="/panelAdmin" method="post" enctype="multipart/form-data">
			<label for="update">selectionné l'id de l'oeuvres:</label>
        	<input type="text" name="idSelect">

			<label for="image">image:</label>
			<input type="file" name="image" required>

			<input type="submit" name="update4" value="update image">
		</form>
	</div>

	<div class="crudOeuvres">
		<div class="readOeuvres">
			{% for works in oeuvresDetails %}
				<div class="read">
					<p id="read">id: {{works.idWorks}}</p>
					<p id="read">name: {{works.nameWorks}}</p>
					<p id="read">status: {{works.status}}</p>
					<p id="read">summary: {{works.summary}}</p>
					<p id="read">numberOfEpisodes: {{works.numberOfEpisodes}}</p>
					<p id="read">numberOfSeason: {{works.numberOfSeason}}</p>
					<p id="read">numberOfTome: {{works.numberOfTome}}</p>
					<img id="image" src="data:image;base64,{{works.image}}" alt="Image">
				</div>
			{% endfor %}
		</div>
	</div>	
{% endblock %}